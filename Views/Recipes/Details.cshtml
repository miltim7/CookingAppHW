@model Recipe

@{
    ViewData["Title"] = "Details";
}

<p class="details-title">@Model.Title</p>

<div class="slider" x-data="{start: true, end: false}" style="padding-top: 150px;">
    <div class="slider__content" x-ref="slider"
        x-on:scroll.debounce="$refs.slider.scrollLeft == 0 ? start = true : start = false; Math.abs(($refs.slider.scrollWidth - $refs.slider.offsetWidth) - $refs.slider.scrollLeft) < 5 ? end = true : end = false;">
        <div class="slider__item"><img class="slider__image" src="https://source.unsplash.com/featured/?@Model.Title">
        </div>
        <div class="slider__item"><img class="slider__image" src="https://source.unsplash.com/featured/?my @Model.Title">
        </div>
        <div class="slider__item"><img class="slider__image" src="https://source.unsplash.com/featured/?big @Model.Title">
        </div>
        <div class="slider__item"><img class="slider__image" src="https://source.unsplash.com/featured/?delicious @Model.Title">
        </div>
        <div class="slider__item"><img class="slider__image" src="https://source.unsplash.com/featured/?tasty @Model.Title">
        </div>
        <div class="slider__item"><img class="slider__image" src="https://source.unsplash.com/featured/?large    @Model.Title">
        </div>
    </div>
</div>

<div class="details">
    <p><span>Description:</span> @Model.Description</p>

    <p><span>Category:</span> @Model.Category</p>

    <p><span>Creator:</span> @ViewData["UserName"]</p>

    <p><span>Recipes id:</span> @Model.Id</p>
</div>


<style>
    .details {
        position: absolute;
        top: 700px;
        left: 200px;
        font-size: 20px;
        font-weight: 400;
        color: #000000;
        bottom: 100px;
    }

    .details p span {
        font-weight: 600;
    }

    .details-title {
        position: absolute;
        top: 150px;
        font-size: 40px;
        font-weight: bold;
        color: #97cd33;
    }

    :root {
        --scrollcolor: #fff;
        --scrollbackground: #141e27;
    }

    .details-ul {
        list-style: none;
        margin-top: 30px;
    }

    .title {
        font-size: 2.5rem;
        font-family: system-ui;
        line-height: 1.1;
        font-weight: 300;
        color: #fff;
        margin: 4rem auto 1rem;
        width: 85%;
        max-width: 1280px;
    }

    .slider {
        width: 85%;
        max-width: 1280px;
        margin: 100px auto 0 auto;
        display: flex;
        flex-direction: column;
    }

    .slider__content {
        overflow-x: scroll;
        scroll-snap-type: x mandatory;
        display: flex;
        gap: 1rem;
        padding-bottom: 1rem;
        scrollbar-color: var(--scrollcolor) var(--scrollbackground);
    }

    .slider__content::-webkit-scrollbar {
        height: 0.5rem;
        width: 0.5rem;
        border-radius: 1rem;
        background: var(--scrollbackground);
    }

    .slider__content::-webkit-scrollbar-thumb {
        border-radius: 1rem;
        background: var(--scrollcolor);
    }

    .slider__content::-webkit-scrollbar-track {
        border-radius: 1rem;
        background: var(--scrollbackground);
    }

    .slider__item {
        scroll-snap-align: start;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        min-width: 350px;
        width: 350px;
        border-radius: 0.25rem;
        overflow: hidden;
        position: relative;
        aspect-ratio: 1;
    }

    .slider__image {
        display: block;
        width: 350px;
        height: 350px;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
    }

    .slider__nav {
        margin: 1rem 0 4rem;
        width: 100%;
        padding: 0;
        display: flex;
        justify-content: flex-start;
        gap: 1rem;
        align-content: center;
        align-items: center;
        pointer-events: none;
    }
</style>