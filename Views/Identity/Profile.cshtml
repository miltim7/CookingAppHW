@model IdentityUser

@{
    ViewData["Title"] = "Profile";
}

<button class="go-back">&#8249;</button>

<div class="profile-div">
    <form class="profile-form">
        <p class="form-name">Profile</p>
        <input type="text" value="@Model.UserName" readonly>
        <input type="email" value="@Model.Email" readonly>
    </form>
</div>

<style>
    .profile-div {
        display: flex;
        flex-direction: column;
        margin-top: 250px;
        font-size: 30px;
    }

    .profile-form p {
        font-weight: bold;
        color: #d6bf29;
        font-size: 18px;
    }

    .profile-form {
        position: relative;
        background: #ffffff;
        max-width: 360px;
        padding: 45px;
        text-align: center;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        border-radius: 15px;
    }

    .profile-form input,
    .profile-form textarea {
        outline: 0;
        background: #f2f2f2;
        width: 100%;
        border: 0;
        margin: 0 0 15px;
        padding: 15px;
        box-sizing: border-box;
        font-size: 14px;
        border-radius: 15px;
    }

    .profile-form button {
        text-transform: uppercase;
        outline: 0;
        background: #3324be;
        width: 100%;
        border: 0;
        padding: 15px;
        color: #FFFFFF;
        font-size: 14px;
        border-radius: 15px;
        -webkit-transition: all 0.3 ease;
        transition: all 0.3 ease;
        cursor: pointer;
    }

    .profile-form button:hover,
    .profile-form button:active,
    .profile-form button:focus {
        background: #2957d6;
    }
</style>